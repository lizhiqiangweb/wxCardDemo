/**index.wxss**/
page {
  background-color: #efefef;
}
.containe {
  margin: 0;
  background: #efefef;
}
.cardBox-item {
  border: 1px solid #ddd;
  border-radius: 10px;
  height: 380rpx;
  box-shadow: 1rpx 1rpx 6rpx #aaa;
  background: #fff;
  width: 100%;
  position: relative;
}
.btnTo {
  width: 100%;
  height: 380rpx;
  background: rgba(0, 0, 0, 0);
  position: absolute;
  top: 0;
}
.box {
  padding: 32rpx 24rpx 0;
}
.tit {
  font-size: 20px;
  color: #000;
  margin-bottom: 24rpx;
  padding-top: 42rpx;
}
.news-item2 image {
  width: 4%;
  height: 18rpx;
  margin-right: 10rpx;
}
.add_img {
  width: 100rpx;
  height: 100rpx;
}
.name {
  font-size: 14px;
  font-weight: 500;
}
.main-top {
  margin-bottom: 24rpx;
}
.news {
  font-size: 10px;
  color: #666;
  margin-top: 14rpx;
}
.news-item {
  font-size: 10px;
  color: #666;
  margin-bottom: 14rpx;
}
.cardBox {
  width: 94%;
  margin: 0 auto;
}
.content-left {
  border: 1px solid #ddd;
  width: 62%;
  border-radius: 10px;
  float: left;
  padding: 14rpx 22rpx;
  box-shadow: 1rpx 1rpx 12rpx #ddd;
}
.main-top {
  float: left;
}
.main-right {
  float: right;
}
.name1 {
  font-size: 16px;
  color: #000;
  margin-bottom: 18rpx;
}
.news-right {
  font-size: 12px;
  color: #666;
  margin-top: 18rpx;
}
.news-right:last-child {
  background: #ddd;
  padding: 6rpx 6rpx;
  border-radius: 4px;
  width: 168rpx;
}
.content-right {
  float: left;
  margin: 48rpx 0 0 20rpx;
}
.clear {
  clear: both;
}