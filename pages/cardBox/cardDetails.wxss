@import "../myCard/funPage/editCard.wxss";
page {
  background: #efefef;
}
.content {
  display: flex;
  justify-content: center;
  margin: 12rpx 0 0 0;
}
.newsBox {
  margin-top: 22rpx;
}
/* contact */
.contact text {
  font-size: 16px;
  color: #fff;
  background: #076cc4;
  display: inline-block;
  width: 672rpx;
  height: 74rpx;
  line-height: 74rpx;
  border-radius: 10rpx;
  box-shadow: 1px 1px 6rpx #999;
  text-align: center;
  position: relative;
}
.contact text::before {
  content: '';
  width: 58rpx;
  height: 2rpx;
  background: #fff;
  display: block;
  position: absolute;
  left: 176rpx;
  top: 50%;
}
.contact text::after {
  content: '';
  width: 58rpx;
  height: 2rpx;
  background: #fff;
  display: block;
  position: absolute;
  right: 176rpx;
  top: 50%;
}
.contact-box {
  background: #fff;
  width: 90%;
  border-radius: 10rpx;
  padding: 32rpx 0;
  margin: 24rpx 0 0 0;
}
.contact-tit {
  margin: 0 0 24rpx 46rpx;
}
.contactBtn {
  display: flex;
  justify-content: center;
}
.contactBtn-item {
  margin: 0 8rpx;
}
.contactBtn-item image {
  width: 108rpx;
  height: 108rpx;
}
/* myProfile */
.myProfile text {
  height: auto;
  width: 90%;
  font-size: 14px;
  display: block;
  margin: 0 auto;
  text-indent: 1rem;
  color: #333;
}
.count {
  font-size: 12px;
  color: #999;
  float: right;
  margin-right: 48rpx;
}
.profileList {
  display: flex;
  justify-content: center;
}
.profileList image {
  width: 180rpx;
  height: 180rpx;
  border: 1px solid #999;
  margin: 0 6rpx;
}
/* companyHome */
.comanyProfile {
  width: 90%;
  margin: 0 auto;
}
.comanyProfile-top {
  display: flex;
  justify-content: center;
}
.logo {
  height: 180rpx;
  width: 180rpx;
}
.tit-main {
  width: 420rpx;
}
.tit-title {
  font-size: 14px;
  text-indent: 1rem;
  color: #333;
}
.tit-content {
  font-size: 10px;
  text-indent: 1rem;
  color: #666;
  margin: 8rpx 0 0 24rpx;
  line-height: 1.1rem;
}
.codeList {
  display: flex;
  justify-content: center;
}
.code-item text {
  font-size: 14px;
  color: #333;
  text-align: center;
  display: inline-block;
  width: 260rpx;
}
.code-item image {
  width: 260rpx;
  height: 260rpx;
  margin: 24rpx 20rpx 0;
  box-shadow: 1px 1px 4rpx #999;
}
/* companyCase */
.caseImg {
  width: 230rpx;
  height: 240rpx;
}
/* clear */
.clear {
  clear: both;
}